

  <h1><%=kind%> </h1>


  <table class="table table-sm table-bordered" style="width : 600px">
    <%
      var i = 0;
          
      while(i < results.length){
    %>
      <tr><td class="td td-sm" ><img src="/images/<%=results[i].img%>" style="width:100px;height:100px;"></td>
          <td><a href="/book/book_detail/<%=results[i].id%>"><%=results[i].name%></a></td>
          <td><%=results[i].author%></td>
          <td><%=results[i].price%></td>
        </tr>
      <%
          i++;
        }
      %>
    </table>


    <% 
    if(kind == "home"){
      var j = 1;
      while (j <= totalpages) { 
          if(j == pageNum){ %>
              <span style="font-weight : bold;"><%=j%></span> &nbsp;&nbsp;
          <% } else { %>
              <span><a href="/book/<%=j%>"><%=j%></a></span> &nbsp;&nbsp;
  <%     } 
          j++ 
      }
    } 
  %>
    
